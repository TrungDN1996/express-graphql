{
  "name": "express-graphql-api",
  "version": "1.0.0",
  "main": "./dist/src/index.js",
  "license": "MIT",
  "prisma": {
    "seed": "ts-node ./prisma/seeder/seed.ts"
  },
  "scripts": {
    "build": "npm run clean && tsc --build && npm run copyfiles",
    "clean": "rimraf ./dist",
    "start": "node ./dist/src/index.js",
    "copyfiles": "copyfiles src/modules/auth/schema.graphql src/modules/users/schema.graphql src/public/* ./dist",
    "watch": "nodemon index.ts",
    "dev": "npm run build && npx prisma migrate dev && npx prisma db seed && npm run watch"
  },
  "dependencies": {
    "@apollo/server-plugin-landing-page-graphql-playground": "^4.0.1",
    "@graphql-tools/load-files": "^7.0.0",
    "@hapi/boom": "^10.0.1",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/nodemailer": "^6.4.14",
    "apollo-server-express": "^3.13.0",
    "bcrypt": "^5.1.1",
    "copyfiles": "^2.4.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "graphql": "^16.8.1",
    "graphql-passport": "^0.6.8",
    "graphql-scalars": "^1.23.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.13",
    "nodemon": "^3.1.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "prisma": "^4.16.2",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@prisma/client": "^4.16.2",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20.12.3",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38"
  }
}
